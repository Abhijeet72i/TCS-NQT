#include <iostream>
using namespace std;

int main()
{
    int count =0;
    int n;
    
    cout<<"insert thr no :"<<endl;
    cin>>n;
    
    int number = n;
    while(n>0){
        int digit = n%10;
       
        if((digit != 0 && number%digit)==0){
            count++;
        }
         n=n/10;
    }
     cout << "Number of digits that divide the number evenly: " << count << endl;


    return 0;
}
